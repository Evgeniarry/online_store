<%- include('../partials/header', { title: 'Регистрация' }) %>

<div class="auth-container">
  <% if (error) { %>
    <div class="alert alert-danger">
      <%= typeof error === 'string' ? error : 'Ошибка регистрации' %>
    </div>
  <% } %>

  <form class="auth-form" action="/auth/register" method="post">
    <div class="form-group">
      <input 
        type="text" 
        name="username" 
        class="form-control"
        placeholder="Логин" 
        required
      >
    </div>

    <div class="form-group">
      <input 
        type="email" 
        name="email" 
        class="form-control"
        placeholder="Email" 
        required
      >
    </div>

    <div class="form-group">
      <input 
        type="password" 
        name="password" 
        class="form-control"
        placeholder="Пароль (минимум 6 символов)" 
        required
        minlength="6"
      >
    </div>

    <button type="submit" class="btn">Зарегистрироваться</button>
  </form>

  <div class="auth-links">
    Уже есть аккаунт? <a href="/auth/login" class="auth-link">Войти</a>
  </div>
</div>

<%- include('../partials/footer') %>