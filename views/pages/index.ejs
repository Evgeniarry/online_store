<%- include('../partials/header') %>

  <section class="hero">
    <div class="container">
      <h1>Минимализм в каждой детали</h1>
      <p>Откройте для себя элегантность простоты в нашей коллекции</p>
      <a href="/catalog" class="btn">Смотреть коллекцию</a>
    </div>
  </section>

  <section class="featured">
    <div class="container">
      <h2 class="section-title">Популярные товары</h2>
      <div class="products-grid">
        <% products.forEach(product => { %>
          <div class="product-card">
            <div class="product-image">
              <img src="<%= product.image || '/images/placeholder.jpg' %>" alt="<%= product.name %>">
            </div>
            <div class="product-info">
              <h3 class="product-title"><%= product.name %></h3>
              <p class="product-price"><%= product.price.toLocaleString() %> ₽</p>
              <button class="btn" style="width: 100%; padding: 0.6rem;">В корзину</button>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

<%- include('../partials/footer') %>